{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "chef",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#support"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#storage"
    },
    {
      "include": "#entity"
    },
    {
      "include": "#markup"
    },
    {
      "include": "#variable"
    },
    {
      "include": "#constant"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.chef",
          "match": "\\b(check|otherwise|while|taste|serve|end)\\b"
        },
        {
          "name": "keyword.operator.chef",
          "match": "\\b(above|below|is|isnt|not|add|minus|compliments|or|equals|split|combine)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.chef",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.chef",
          "match": "\\\\."
        }
      ]
    },
    "support": {
      "patterns": [
        {
          "name": "support.function.chef",
          "match": "\\b(time|stir)\\b"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.chef",
          "begin": "//",
          "end": "\\n"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.type.chef",
          "match": "(set|to)"
        }
      ]
    },
    "entity": {
      "patterns": [
        {
          "name": "entity.name.function.chef",
          "match": "(\\b(with|now|,|and|whisk|bake|cook)\\b|,)"
        }
      ]
    },
    "markup": {
      "patterns": [
        {
          "name": "markup.heading.chef",
          "match": "\\b(Recipe|Ingredients|Utensils|Steps)\\b"
        },
        {
          "name": "markup.list.numbered.chef",
          "match": "\\s(\\d+\\.)\\s"
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "name": "variable.language.chef",
          "match": "\\b(egg|flour|sugar|milk|chocolate|banana)\\b"
        },
        {
          "name": "variable.parameter.chef",
          "match": "[xyz]"
        }
      ]
    },
    "constant": {
      "patterns": [
        {
          "name": "constant.language.chef",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "name": "constant.numeric.chef",
          "match": "\\d*\\.?\\d+"
        }
      ]
    }
  },
  "scopeName": "source.chef"
}
